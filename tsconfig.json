{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",     
    "strictNullChecks": false,
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,               
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
